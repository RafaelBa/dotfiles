[core]
	excludesfile = ~/.git-configs/.gitignore_global
	editor = nvim
[commit]
	template = ~/.git-configs/.stCommitMsg
[alias]
	graph-current = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(auto)%d%C(reset)'
	graph2-current = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(auto)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)'
	graph3-current = log --graph --decorate
	graph-all = graph-current --all
	graph2-all = graph2-current --all
	graph3-all = graph3 --all
	graph = graph-current
	graph2 = graph2-current
	graph3 = graph3-current
	ci = commit
	co = checkout
	wk = worktree
[pull]
	rebase = false

## Merge and diff tools
[merge]
	tool = nvimdiff
# Default all powerful 3-way-merge-view
[mergetool "nvimdiff"]
	cmd = "nvim --cmd 'let g:user_ide=\"kvim\"' -d $MERGED -c \"aboveleft split $LOCAL | diffthis\" -c \"belowright vsplit $BASE | diffthis\" -c \"belowright vsplit $REMOTE | diffthis\" -c \"0tabnew $LOCAL | diffthis\" -c \"belowright vsplit $REMOTE | diffthis\" -c \"aboveleft vsplit $MERGED | diffthis\""
# Replicating git's <x>.1 view
[mergetool "nvimdiff1"]
	cmd = "nvim --cmd 'let g:user_ide=\"kvim\"' -d -O $LOCAL $REMOTE"
# Replicating git's <x>.2 view
[mergetool "nvimdiff2"]
	cmd = "nvim --cmd 'let g:user_ide=\"kvim\"' -d -O $LOCAL $MERGED $REMOTE"
[mergetool "vimdiff"]
	layout = LOCAL,REMOTE / MERGED
[diff]
	tool = nvimdiff
[difftool]
	# TODO: To be confirmed - the prompt is supposed to protect you against constantly opening windows
	prompt = false
# Preferred default view for diffs
[difftool "nvimdiff"]
	cmd = "nvim --cmd 'let g:user_ide=\"kvim\"' -d -O $LOCAL $REMOTE"
# Replicating git's <x>.1 view
[difftool "nvimdiff1"]
	cmd = "nvim --cmd 'let g:user_ide=\"kvim\"' -d -O $LOCAL $REMOTE"
# Replicating git's <x>.2 view
[difftool "nvimdiff2"]
	cmd = "nvim --cmd 'let g:user_ide=\"kvim\"' -d -O $LOCAL $MERGED $REMOTE"



[color "diff"]
	# Makes, among other, file names blue, so they are easier to spot in a diff
	meta = blue bold
[rerere]
	enabled = true
[credential]
	helper = osxkeychain
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[init]
	defaultBranch = main
[include]
	# Set or override config specific to this local computer
	path = ~/.git-configs/local-config
